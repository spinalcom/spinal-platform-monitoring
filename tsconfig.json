{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declarationDir": "declarations"
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "./dist/**/*.d.ts",
  ]
}